<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center mb-3">New Recipe</h1>
  <h4 class="text-center mb-3">Add a recipe to save it for later!</h4>
  <p class="text-center mb-3">
    Warning: New recipes are saved on the website for all users to see.
  </p>
  <div class="col-md-6 offset-md-3">
    <form
      action="/recipes"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="recipe[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="ingredients"
          >Ingredients (comma-separated)</label
        >
        <input
          class="form-control"
          type="text"
          id="ingredients"
          name="recipe[ingredients]"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="instructions">Instructions</label>
        <textarea
          class="form-control"
          rows="4"
          cols="50"
          id="instructions"
          name="recipe[instructions]"
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Recipe</button>
      </div>
    </form>
    <a href="/recipes">All Recipes</a>
  </div>
</div>
