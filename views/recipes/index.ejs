<% layout('layouts/boilerplate') %>

<div class="container"></div>
<h1 class="mb-3">All Recipes</h1>
<h4 class="mb-3">Click on a recipe to see ingredients and learn more!</h4>

<div class="row row-cols-1 row-cols-md-4">
  <% for (let recipe of recipes) { %>
  <div class="col mb-3">
    <div class="card h-100">
      <div class="card-header"><%= recipe.title %></div>
      <div class="card-body">
        <p><%= recipe.instructions %></p>
        <a href="/recipes/<%= recipe._id %>" class="stretched-link"></a>
      </div>
    </div>
  </div>
  <% } %>
  <h4 class="mb-3"><a href="/suggestions">Need some inspiration?</a></h4>
</div>
